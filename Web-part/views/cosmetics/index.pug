extends cosLayout

block maincontent
    link(rel='stylesheet', href='/stylesheets/product_CateList.css')
    main(role='main')
        .category-title.row

            .col-2
            .col-8.row
                .col-sm-2
                .col-md-2
                .col-md-4
                    h2.category-title-text 카테고리별 검색 결과
                    if (strQuery)
                        span - #{strQuery}
                .col-md-2 
                .col-md-2 
            .col-2

        .formdiv
            form.form-inline.search-input-group(action='/cosmetics', method='GET')
                i.fa.fa-search
                input.form-control.mr-sm-2(type='text', name='termTotal', placeholder='Search', aria-label='Search', value=term)
                button.btn.btn-primary(type="submit") 검색

        form.category-category-menubar(action='/cosmetics', method='GET')
            .category-category-buttons

                .btn-secondary.category-link-button 스킨케어
                    .category-specific-menu
                        input.specific-category-choice(type='checkbox' class='category-sp-skin' id='skin-all' onclick='function_name(this.id, "category-sp-skin");')
