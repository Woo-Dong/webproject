                        label.specific-category-choice-text 네일
                       
                .btn-secondary.category-link-button 기타제품
                    .category-specific-menu
                        input.specific-category-choice(type='checkbox' class='category-sp-etc' id='etc-all' onclick='function_name(this.id, "category-sp-etc");')
                        label.specific-category-choice-text 전체 선택
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='브러시' class='category-sp-etc')
                        label.specific-category-choice-text 브러시
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='퍼프/스펀지' class='category-sp-etc')
                        label.specific-category-choice-text 퍼프/스펀지
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='뷰러' class='category-sp-etc')
                        label.specific-category-choice-text 뷰러
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='소도구' class='category-sp-etc')
                        label.specific-category-choice-text 소도구
                        
            .choice-submit-area.row
                .col-11
                .col-1
                    button.choice-submit-button(type='submit') 선택 적용
            
        hr
        if cosmetics.total > 0
            .content-all-1.row
                .col-1
                .col-10.row
                each cosmetic, index in cosmetics.docs
                    .col-md-3.content-product-info
                        .content-img-frame
                            a(href=`/cosmetics/${cosmetic.id}`)
                                img.content-product-img(src=cosmetic.img)
                        .content-product-detail
                            p.content-product-brand
                                td= cosmetic.brand
                            
                            p.content-product-name 
                                a(href=`/cosmetics/${cosmetic.id}`)=cosmetic.name
                            p.content-product-price
                                td= cosmetic.price + '원'
                            p.content-product-price
                                td= cosmetic.category
                .col-1
    
    .pagination
        +paginate(cosmetics, '/cosmetics', query)
    script.
        function function_name(id, className) {
            if($("#"+id).is(":checked")){
                $("."+className).prop("checked", true);
            }
            else{$("."+className).prop("checked", false);}
        }
        function function_name2(idname) {
            //- var checkboxes new Array();
            //- checkboxes = document.getElementsByClassName(idname);
            $("."+idname).prop("checked", true);
            
        }