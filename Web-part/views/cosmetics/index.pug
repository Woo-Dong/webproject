                        input.specific-category-choice(type='checkbox' name='termCategory' value ='스킨' class='category-sp-skin')
                        label.specific-category-choice-text 스킨
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='로션' class='category-sp-skin')
                        label.specific-category-choice-text 로션
                        input.specific-category-choice(type='checkbox' name='termCategory'  value ='에센스' class='category-sp-skin')
                        label.specific-category-choice-text 에센스
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='크림' class='category-sp-skin')
                        label.specific-category-choice-text 크림
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='미스트' class='category-sp-skin')
                        label.specific-category-choice-text 미스트
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='오일' class='category-sp-skin')
                        label.specific-category-choice-text 오일
                        input.specific-category-choice(type='checkbox' name='termCategory' value ='기능성(케어)' class='category-sp-skin')
                        label.specific-category-choice-text 기능성(케어)
