    script.

      // WebSocket을 만들고 접속
      var socket = io();

      socket.on('welcome', function() {
        console.log('received welcome');
        socket.emit('join');
      });

      socket.on('alarm', function(data) {
        console.log("Data:", data);
        document.getElementById('alarm').innerHTML = toSting(data.checkAlarm);
        
      });