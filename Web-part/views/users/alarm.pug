extends ../layout
include ../includes/_paginate
block content
    //- link(rel='stylesheet', href='/stylesheets/salelist.css')
    .container
        h1.main-title  #{user.name} 님
        dl.row
            dt.col-sm-3 알람 리스트
            if (!sales)
                dd.col-sm-9 할인하는 정보가 없습니다.
            else
                dd.col-sm-9
                .content-all-1.row
                    .col-1
                    .col-10.row
                    
                    each brand in sales

                        span #{brand[0].shop}

                        each sale in brand
                            
                            .col-md-3.content-product-info
                                .event_sale_img
                                    a(href=sale.link)
                                        if (sale.img)
                                            img(src=sale.img style='width:90%; height:90%; margin-left:0;')
                                        else
                                            img(src='images/default_icon.JPG' style='width:90%; height:90%; margin-left:0;')
                                        br
                                        span.name #{sale.name}
                                .event_sale_info
                                    br
                                    span.brand 브랜드: #{sale.shop} 
                                    br
                                    a(href=sale.eventLink)
                                        span.saleTitle 이벤트명: #{sale.saleTitle}
                                    br
                                    span.price
                                        del=sale.price 
                                        p #{sale.salePrice}
                                    span.salePer #{sale.salePer} 할인
                                    br
                                    span.period #{sale.start} ~ #{sale.end}
                    .col-1
