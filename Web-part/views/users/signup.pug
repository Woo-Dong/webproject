extends ../layout
  
block content
    a.header-logo.text-warning(href='/')
        h1.text-center
            b 회원가입
    .input-box(style='width:35%; margin-left:auto; margin-right:auto;')
        include ../includes/alert
        form(action='/users', method='POST')
            .form-group
                label(for='email', style=' margin-bottom:4px;')  * 이메일 주소 
                input#exampleInputEmail1.form-control(type='email', name='email', aria-describedby='emailHelp', placeholder='Enter email', style='margin-top:5px;')
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
            .form-group
                label(for='password', style=' margin-bottom:4px;')  * 비밀번호 
                input#exampleInputPassword1.form-control(type='password', name='password' placeholder='Password', style='margin-top:5px;')
            
            //- .form-group(style='width:35%; margin-left:auto; margin-right:auto;')
            .form-group
                label(for='passwordconf', style=' margin-bottom:4px;')  * 비밀번호 확인 
                input#exampleInputPassword1.form-control(type='password', name='passwordconf' placeholder='Password', style='margin-top:5px;')
            //- .form-group(style='margin-left: 30%;')
            //-     input#exampleCheck1.form-check-input(type='checkbox', value="agree")
            //-     label.form-check-label(for='exampleCheck1', style=' margin-bottom:4px;') Check me out
            
            //- .form-group(style='width:35%; margin-left:auto; margin-right:auto;')
            .form-group
                label(for='name', style='margin-bottom:4px;')  * 이름(닉네임) 
                input.form-control(type='text', id='name', name='name', placeholder='Enter name', style='margin-top:5px;')
            
            hr
            p
                strong 관심브랜드
            include _brandlist


            hr
            p  
                strong 관심카테고리
            include _categorylist

            button.btn.btn-primary(type='submit') 회원가입
